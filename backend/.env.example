# Configurações de API (Substitua pelos seus tokens reais)
OPENAI_API_KEY=your_openai_api_key_here
XAI_API_KEY=your_xai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
GLADIA_API_KEY=your_gladia_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Banco de Dados (PostgreSQL)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=balto_db
POSTGRES_USER=balto_user
POSTGRES_PASSWORD=baltopassword123

# Segurança e Monitoramento
ADMIN_SECRET=your_admin_secret_here
LOG_MONITOR_API_KEY=your_log_monitor_api_key_here
LOG_MONITOR_WEBHOOK_URL=https://api.pbpmdev.com/webhook

# Diretórios
AUDIO_DUMP_DIR=/backend/app/audio_dumps

# --- BALTO V2 CONFIG ---
# 1/true = Ligado, 0/false = Desligado
MOCK_MODE=true
MOCK_VOICE=true
MOCK_RECOMMENDATION=false
MOCK_LATENCY_MIN=0.5
MOCK_LATENCY_MAX=2.0
VAD_THRESHOLD_MULTIPLIER=1.8
VAD_MIN_ENERGY_THRESHOLD=120.0

# --- Capacity Watchdog (Anti-Crash) ---
CAPACITY_MAX_CPU_PERCENT=90
CAPACITY_MAX_RAM_PERCENT=85
CAPACITY_MAX_LATENCY_RATIO=3.0

# --- Smart Routing (Economia) ---
# 1 = Ligado (AssemblyAI em audios bons), 0 = Desligado (Sempre ElevenLabs)
SMART_ROUTING_ENABLE=0
# Qualidade minima (dB) para usar o modelo economico
SMART_ROUTING_SNR_THRESHOLD=15.0
# Duracao minima (segundos) para usar o modelo economico
SMART_ROUTING_MIN_DURATION=5.0

# --- GROK SETTINGS ---
# 1 Apenas itens da lista, 0 todos os itens
RESTRICT_PRODUCTS=0
# --- Drive Sync Settings ---
DRIVE_SYNC_ENABLED=true
DRIVE_SYNC_INTERVAL_MINUTES=30
DRIVE_SYNC_REMOTE_NAME=balto_drive
DRIVE_SYNC_REMOTE_DIR=BaltoAudioArchive
RCLONE_CONFIG_PATH=/backend/rclone.conf

# Configurações do Orquestrador (Robôs / Stress Test)
STRESS_DURATION_MINUTES=1
STRESS_CLIENTS=5
STRESS_TARGET_URL=ws://localhost:8765/ws
STRESS_AUDIO_FILE=test_audio.webm
